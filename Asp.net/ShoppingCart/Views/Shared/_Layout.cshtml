<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <!-- Object.observe & Array.observe shims for IE and FF -->
    <script src="@Url.Content("~/sys/object.observe/dist/object-observe.js")"></script>
    <script src="@Url.Content("~/sys/array.observe/array-observe.js")"></script>

    <!-- WebComponents shim for IE and FF -->
    <script src="@Url.Content("~/sys/webcomponentsjs/webcomponents.js")"></script>

    <!-- Import Polymer library -->
    <link rel="import" href="@Url.Content("~/sys/polymer/polymer.html")" />
    <link rel="import" href="@Url.Content("~/sys/iron-ajax/iron-ajax.html")" />

    <!-- sc-select custom element to workaround lack of dom-repeat support inside <select> under IE -->
    <link rel="import" href="@Url.Content("~/Scripts/sc-select.html")" />

    <!-- Default styles -->
    <link rel="stylesheet" href="@Url.Content("~/Content/bootswatch/paper/bootstrap.min.css")" />

    <!-- Local styles -->
    <link rel="stylesheet" href="@Url.Content("~/Content/style.css")" />
</head>
<body>
    @RenderBody()
</body>
</html>
