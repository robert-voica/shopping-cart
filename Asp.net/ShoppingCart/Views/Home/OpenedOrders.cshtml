@model IEnumerable<ShoppingCart.Models.Order>

@{
    ViewBag.Title = "OpenedOrders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.ActionLink("LogOut", "LogOut")
<br />

<h2>OpenedOrders</h2>

<p>
    @Html.ActionLink("My orders to fulfill", "MyOrdersToFulfill")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Customer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalAmount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserClientId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserCourierId)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserClientId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserCourierId)
            </td>
            <td>
                @Html.ActionLink("Details", "OrderDetails", new { id = item.Id, before = "OpenedOrders" })
                |
                @Html.ActionLink("Take", "TakeOrder", new { id = item.Id }, new { onclick = "return confirm('Are you sure you wish to take this order?');" })
            </td>
        </tr>
    }

</table>
